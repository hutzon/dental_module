<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_dental_service_type_tree" model="ir.ui.view">
        <field name="name">dental.service.type.tree</field>
        <field name="model">dental.service.type</field>
        <field name="arch" type="xml">
            <list string="Service Types" editable="bottom">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_dental_service_type_form" model="ir.ui.view">
        <field name="name">dental.service.type.form</field>
        <field name="model">dental.service.type</field>
        <field name="arch" type="xml">
            <form string="Service Type">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="E.g. Orthodontics"/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_dental_service_type" model="ir.actions.act_window">
        <field name="name">Service Types</field>
        <field name="res_model">dental.service.type</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new Service Type (Category)!
          </p>
        </field>
    </record>
</odoo>
