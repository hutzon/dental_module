<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Calendar View -->
    <record id="view_dental_appointment_calendar" model="ir.ui.view">
        <field name="name">dental.appointment.calendar</field>
        <field name="model">dental.appointment</field>
        <field name="arch" type="xml">
            <calendar string="Appointments" date_start="date_start" date_stop="date_end" color="color" quick_create="false" mode="week">
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="state"/>
                <field name="color" invisible="1"/>
            </calendar>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_dental_appointment_tree" model="ir.ui.view">
        <field name="name">dental.appointment.tree</field>
        <field name="model">dental.appointment</field>
        <field name="arch" type="xml">
            <list string="Appointments" decoration-info="state == 'draft'" decoration-muted="state == 'canceled'" decoration-success="state == 'done'">
                <field name="name"/>
                <field name="date_start"/>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_dental_appointment_form" model="ir.ui.view">
        <field name="name">dental.appointment.form</field>
        <field name="model">dental.appointment</field>
        <field name="arch" type="xml">
            <form string="Appointment">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" invisible="state != 'draft'" class="oe_highlight"/>
                    <button name="action_done" string="Mark as Done" type="object" invisible="state != 'confirmed'" class="oe_highlight"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="state == 'done'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_prescriptions" icon="fa-pencil-square-o">
                            <field string="Prescriptions" name="prescription_count" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id"/>
                            <field name="doctor_id"/>
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="service_ids" widget="many2many_tags" options="{'no_create': True}"/>
                            <field name="duration" widget="float_time"/>
                            <field name="date_end" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="note"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_dental_appointment_kanban" model="ir.ui.view">
        <field name="name">dental.appointment.kanban</field>
        <field name="model">dental.appointment</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="id"/>
                <field name="color"/>
                <field name="name"/>
                <field name="patient_id"/>
                <field name="date_start"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{record.color.raw_value} oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div><field name="patient_id"/></div>
                                <div><field name="date_start"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_dental_appointment" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="res_model">dental.appointment</field>
        <field name="view_mode">calendar,list,form,kanban</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Schedule your first dental appointment!
          </p>
        </field>
    </record>
</odoo>
