<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Demo Doctors -->
        <record id="partner_demo_doctor_1" model="res.partner">
            <field name="name">Dr. Sarah Smith</field>
            <field name="is_doctor">True</field>
            <field name="email">sarah.smith@dental.example.com</field>
            <field name="phone">+1 555 0101</field> 
        </record>

        <record id="partner_demo_doctor_2" model="res.partner">
            <field name="name">Dr. James Wilson</field>
            <field name="is_doctor">True</field>
            <field name="email">james.wilson@dental.example.com</field>
            <field name="phone">+1 555 0102</field>
        </record>

        <!-- Demo Patients -->
        <record id="partner_demo_patient_1" model="res.partner">
            <field name="name">John Doe</field>
            <field name="is_patient">True</field>
            <field name="email">john.doe@example.com</field>
            <field name="phone">+1 555 0201</field>
        </record>

        <record id="partner_demo_patient_2" model="res.partner">
            <field name="name">Jane Roe</field>
            <field name="is_patient">True</field>
            <field name="email">jane.roe@example.com</field>
            <field name="phone">+1 555 0202</field>
        </record>

        <!-- Demo Appointments -->
        <record id="appointment_demo_1" model="dental.appointment">
            <field name="patient_id" ref="partner_demo_patient_1"/>
            <field name="doctor_id" ref="partner_demo_doctor_1"/>
            <field name="date_start" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 09:00:00')"/>
            <field name="duration">1.0</field>
            <field name="state">confirmed</field>
            <field name="note">Routine checkup.</field>
        </record>

        <record id="appointment_demo_2" model="dental.appointment">
            <field name="patient_id" ref="partner_demo_patient_2"/>
            <field name="doctor_id" ref="partner_demo_doctor_2"/>
            <field name="date_start" eval="(DateTime.now() + timedelta(days=2)).strftime('%Y-%m-%d 14:00:00')"/>
            <field name="duration">0.5</field>
            <field name="state">draft</field>
            <field name="note">Toothache complain.</field>
        </record>
    </data>
</odoo>
